+static av_cold int o266dec_free(AVCodecContext *avctx)
+{
+    O266DecContext *ctx = avctx->priv_data;
+    if (ctx && ctx->handle) {
+        O266DecCloseDecoder(ctx->handle);
+        ctx->handle = NULL;
+    }
+    return 0;
